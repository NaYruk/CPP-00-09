{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug btc (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/09/ex00/btc",
            "args": ["test.txt"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/09/ex00",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "make ex00",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Attach to process (gdb)",
            "type": "cppdbg",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "cwd": "${workspaceFolder}/09/ex00"
        }
    ]
}